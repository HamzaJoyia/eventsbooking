<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<p><strong>Location:</strong> <%= @event.location %></p>
<p><strong>Date:</strong> <%= @event.date.strftime('%B %d, %Y at %I:%M %p') %></p>

<%= form_with(model: [@event, @ticket], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :quantity, 'Number of Tickets' %> <!-- Use quantity here -->
    <%= form.number_field :quantity, min: 1, max: @event.tickets_available, value: 1 %> <!-- Use quantity here -->
  </div>

  <div class="form-group">
    <%= form.submit 'Book Tickets', class: 'btn btn-primary' %>
  </div>
<% end %>

<p><strong>Tickets Available:</strong> <%= @event.tickets_available %> / <%= @event.tickets_total %></p>

<%= link_to 'Back to Events', events_path, class: 'btn btn-secondary' %>
