<h1>My Events</h1>

<% if @events.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date.strftime("%B %d, %Y") %></td>
          <td><%= event.location %></td>
         
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You havenâ€™t created any events yet.</p>
  <%= link_to 'Create New Event', new_event_path, class: 'btn btn-success' %>
<% end %>
